{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install",
    "watchPatterns": ["inversiones-bot/**"]
  },
  "deploy": {
    "startCommand": "cd inversiones-bot && node bot.js",
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  }
}